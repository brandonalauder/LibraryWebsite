<%=	form_with(model: @book,	local:	true)	do	|form|	%>
  <% if @book.errors.any?	%>
  <div id="error_explanation">
    <h2>
      Error:
    </h2>
    <ul>
      <%	@book.errors.full_messages.each do	|msg|	%>
      <li><%=	msg %></li>
      <%	end	%>
    </ul>
  </div>
<%	end	%>

  <p>
    <%=	form.label :title %><br>
    <%=	form.text_field:title %>
  </p>
  <p>
    <%=	form.label :author %><br>
    <%=	form.text_area :author %>
  </p>
  <p>
    <%=	form.label :isbn %><br>
    <%=	form.text_area :isbn %>
  </p>
  <p>
    <%=	form.label :copies %><br>
    <%=	form.text_area :copies %>
  </p>
  <p>
    <%=	form.submit %>
  </p>
<%	end	%>
<%= link_to 'Back',	admin_search_path %>
