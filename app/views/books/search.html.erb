<h1>Found Books</h1>
<table>
<tr>
<th>Title</th>
<th>Author</th>
<th>Isbn</th>
<th>Copies</th>
<th></th>
</tr>
<%	@books.each do	|book|	%>
<tr>
<td><%=	book.title %></td>
<td><%=	book.author %></td>
<td><%=	book.isbn %></td>
<td><%=	book.copies %></td>
<td><%=	link_to 'Edit',	edit_book_path(book)	%></td>
<% if book.copies.to_i > 0 %>
<td><%=	button_to 'Checkout',	checkout_book_path(book), :method => :patch	%></td>
<%	end	%>
</tr>
<%	end	%>
</table>
<p>
  <%=	link_to 'Back',	admin_search_path %>
</p>
