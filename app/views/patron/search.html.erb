<h1>Patron Search</h1>
<%=	form_with scope: :book,	url:	patron_searchresults_path,	local:	true	do	|form|	%>
  <p>
    <%=	form.label :title %><br>
    <%=	form.text_field:title %>
  </p>
  <p>
    <%=	form.label :author %><br>
    <%=	form.text_area :author %>
  </p>
  <p>
    <%=	form.label :isbn %><br>
    <%=	form.text_area :isbn %>
  </p>
  <p>
    <%=	form.submit "Search" %>
  </p>
<%	end	%>
<p>
  <%=	link_to 'Back',	root_path %>
</p>
